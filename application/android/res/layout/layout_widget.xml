<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_style" >

    <TextView
        android:id="@+id/textCoursStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCoursName"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textCoursName"
        android:layout_marginRight="5dp"
        android:maxLines="1"
        android:text="Ã : non disponible" />

    <TextView
        android:id="@+id/textCoursRoom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textCoursStart"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textCoursStart"
        android:layout_marginRight="5dp"
        android:text="Salle: non disponible" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/textCoursName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/imageView1"
        android:maxLines="1"
        android:text="Prochain cours: Non disponible" />

</RelativeLayout>
